package org.comstudy.day01;

public class Hello {
	// (클래스의) 멤버 필드 변수
	// 자바는 변수를 선언할 때 데이터 타입을 표시해야 한다.
	String name = "홍길동";
	public static void main(String[] args) {
		// (메서드의) 로컬 변수
		String address = "파주시 운정";
		int age = 25;
		System.out.println("Hello world");
		System.out.println("성명: ");
	}
}
