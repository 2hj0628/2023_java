package day03;

import day03.Dog;

class Dog{
	// 멤버 필드(전역 변수)
	// 자바의 캡슐화: 필드는 private, 메소드는 public
	private String name;
	
	// 생성자 메소드의 이름은 클래스명과 동일하고 리턴형이 없다.
	// 함수 선언 (){}
	Dog(){
		// 디폴트 생성자
		this("이름없는");	// 다른 생성자 호출
	}
	// 생성자 오버로딩(추가)
	Dog(String name){
		// 필드에 매개변수값을 전달(대입)
		// this는 객체 자신을 가리키는 참조 값
		this.name = name;
	}
}

public class Work101901 {
	static Dog myDog = new Dog("Buddy");	// 생성자를 호출
	public static void main(String[] args) {
		myDog.bark();
	}
}
